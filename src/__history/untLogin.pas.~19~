unit untLogin;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Objects,
  FMX.StdCtrls, FMX.Controls.Presentation, FMX.Edit, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.StorageBin, Data.DB,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client, Vcl.Session;

type
  TfrmLogin = class(TForm)
    imgFundo: TImage;
    pnlLogin: TPanel;
    lblTitulo: TLabel;
    lblSubTitulo: TLabel;
    StyleBook: TStyleBook;
    lblEmail: TLabel;
    pnlEmail: TPanel;
    edtEmail: TEdit;
    lblSenha: TLabel;
    pnlSenha: TPanel;
    edtSenha: TEdit;
    pnlAcessar: TPanel;
    btnAcessar: TSpeedButton;
    TabUsuario: TFDMemTable;
    TabUsuarioid_usuario: TIntegerField;
    TabUsuarionome: TStringField;
    TabUsuarioemail: TStringField;
    TabUsuariosenha: TStringField;
    procedure btnAcessarClick(Sender: TObject);

  private

    { Private declarations }
  public
    { Public declarations }
     procedure TerminateLogin(Sender: TObject);
  end;

var
  frmLogin: TfrmLogin;

implementation

{$R *.fmx}

uses DataModule.Usuario, untPrincipal;



procedure TfrmLogin.btnAcessarClick(Sender: TObject);
begin
  DmUsuario.Login(TabUsuario, edtEmail.Text, edtSenha.Text);

end;

procedure TFrmLogin.TerminateLogin(Sender: TObject);
begin


    if Sender is TThread then
        if Assigned(TThread(Sender).FatalException) then
        begin
            showmessage(Exception(TThread(sender).FatalException).Message);
            exit;
        end;

    // Dados de acesso...
    TSession.ID_USUARIO := TabUsuario.FieldByName('id_usuario').AsInteger;
    TSession.EMAIL := TabUsuario.FieldByName('email').AsString;
    TSession.NOME := TabUsuario.FieldByName('nome').AsString;


    if NOT Assigned(FrmPrincipal) then
        Application.CreateForm(TFrmPrincipal, FrmPrincipal);

    FrmPrincipal.Show;
end;

end.
